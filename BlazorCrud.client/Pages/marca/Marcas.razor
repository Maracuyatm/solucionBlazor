    private List<MarcaDTO>? listaFiltrada => string.IsNullOrWhiteSpace(textoBusqueda)
    ? listaMarca
    : listaMarca?.Where(m => m.Nombre.Contains(textoBusqueda, StringComparison.OrdinalIgnoreCase)).ToList();

